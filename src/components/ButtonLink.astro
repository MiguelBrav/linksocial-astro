---
const { title, url, icon } = Astro.props;
---

<style>
    .button-link {
        text-decoration: none;
        color: white;
        background-color: #007acc;
        padding: 10px 5px;
        margin: 10px 0;
        border-radius: 10px;
        width: 180px;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.3s;
    }

    .button-link:hover {
        background-color: #053248;
    }

    .button-link i {
        margin-right: 10px;
    }

    @media screen and (max-width: 250px) {
        .button-link {
            text-decoration: none;
            color: white;
            background-color: #007acc;
            padding: 10px 20px;
            margin: 10px 0;
            border-radius: 10px;
            width: 120px;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color 0.3s;
        }
    }
</style>

<a href={url} class="button-link" target="_blank" rel="noopener noreferrer">
    <i class={icon}></i>{title}
</a>
